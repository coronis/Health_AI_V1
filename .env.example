# Environment Configuration Template

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/healthcoach
DATABASE_POOL_SIZE=10
DATABASE_SSL_MODE=require

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_CLUSTER_MODE=false

# Authentication
JWT_SECRET=your-jwt-secret-key-here
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=7d

# AI Provider Configuration
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
GOOGLE_AI_API_KEY=your-google-ai-api-key

# External APIs
USDA_API_KEY=your-usda-api-key
WEATHER_API_KEY=your-weather-api-key

# Storage
S3_BUCKET_NAME=healthcoach-storage
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=your-s3-access-key
S3_SECRET_ACCESS_KEY=your-s3-secret-key

# Monitoring
SENTRY_DSN=your-sentry-dsn
LOG_LEVEL=info

# Security
ENCRYPTION_KEY=your-encryption-key
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Feature Flags
ENABLE_AI_CACHING=true
ENABLE_HEALTH_REPORTS=true
ENABLE_PUSH_NOTIFICATIONS=true

# Mobile App Configuration
IOS_BUNDLE_ID=com.healthcoach.app
ANDROID_PACKAGE_NAME=com.healthcoach.app
DEEP_LINK_SCHEME=healthcoach

# Development Only
NODE_ENV=development
PORT=3000
DEBUG=healthcoach:*