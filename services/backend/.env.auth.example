# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-use-crypto-random-bytes
JWT_ACCESS_TTL=900
JWT_REFRESH_TTL=1209600
JWT_ISSUER=healthcoachai

# Twilio Configuration (for OTP SMS)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_SERVICE_SID=your_twilio_verify_service_sid
TWILIO_FROM_NUMBER=+1234567890

# OAuth Configuration
# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=https://api.healthcoachai.com/auth/oauth/google/callback

# Apple OAuth
APPLE_CLIENT_ID=your_apple_client_id
APPLE_CLIENT_SECRET=your_apple_client_secret
APPLE_REDIRECT_URI=https://api.healthcoachai.com/auth/oauth/apple/callback

# Facebook OAuth
FACEBOOK_CLIENT_ID=your_facebook_client_id
FACEBOOK_CLIENT_SECRET=your_facebook_client_secret
FACEBOOK_REDIRECT_URI=https://api.healthcoachai.com/auth/oauth/facebook/callback

# Rate Limiting Configuration
MAX_OTPS_PER_HOUR=3
THROTTLE_TTL=60000
THROTTLE_LIMIT=100

# DLP Configuration
DLP_ENABLE_REDACTION=true
DLP_ENABLE_PSEUDONYMIZATION=true
DLP_RETAIN_HASHES=false

# Security Configuration
ENABLE_DEVICE_BINDING=true
ENABLE_SESSION_CLEANUP=true
SESSION_CLEANUP_INTERVAL=3600000