# Non-sensitive client configuration for iOS
# Copy this file to .env and fill in the actual values
# NEVER commit the actual .env file to version control

# =============================================================================
# Application Configuration
# =============================================================================

APP_NAME=HealthCoachAI
APP_DISPLAY_NAME=HealthCoach AI
APP_IDENTIFIER=com.healthcoachai.app
APP_VERSION=1.0.0
APP_BUILD_NUMBER=1

# Environment
ENV=development

# =============================================================================
# API Configuration
# =============================================================================

API_BASE_URL=http://localhost:8080
API_VERSION=v1
API_TIMEOUT=30000

# WebSocket (if needed)
WS_BASE_URL=ws://localhost:8080

# =============================================================================
# Feature Flags
# =============================================================================

FEATURE_CHAT_ENABLED=true
FEATURE_PHOTO_LOG_STUB=false
FEATURE_SOCIAL_LOGIN_ENABLED=true
FEATURE_OFFLINE_MODE=true
FEATURE_ANALYTICS_ENABLED=true
FEATURE_DEBUG_MODE=true

# =============================================================================
# Third-party Services (Public Keys Only)
# =============================================================================

# Firebase (public configuration)
FIREBASE_PROJECT_ID=healthcoachai-dev
FIREBASE_API_KEY=your-firebase-api-key
FIREBASE_AUTH_DOMAIN=healthcoachai-dev.firebaseapp.com
FIREBASE_MESSAGING_SENDER_ID=123456789

# Sentry (public DSN)
SENTRY_DSN=https://your-public-sentry-dsn@sentry.io/project-id

# =============================================================================
# Analytics and Monitoring
# =============================================================================

# Analytics
ANALYTICS_ENABLED=true
MIXPANEL_TOKEN=your-mixpanel-token

# Performance Monitoring
PERFORMANCE_MONITORING_ENABLED=true

# =============================================================================
# OAuth Configuration (Client IDs only)
# =============================================================================

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com

# Apple OAuth
APPLE_CLIENT_ID=com.healthcoachai.app

# =============================================================================
# Local Development
# =============================================================================

# Debug settings
DEBUG_NETWORK_REQUESTS=true
DEBUG_REDUX_LOGGING=true
DEBUG_PERFORMANCE=true

# Mock data
USE_MOCK_DATA=false
MOCK_API_DELAY=1000

# =============================================================================
# Build Configuration
# =============================================================================

# Code signing (development)
DEVELOPMENT_TEAM=YOUR_TEAM_ID
PROVISIONING_PROFILE_SPECIFIER=HealthCoachAI Development

# Bundle configuration
PRODUCT_BUNDLE_IDENTIFIER=com.healthcoachai.app.dev
PRODUCT_NAME=HealthCoachAI Dev

# =============================================================================
# App Store Configuration
# =============================================================================

# App Store Connect
APP_STORE_CONNECT_API_KEY_ID=your-key-id
APP_STORE_CONNECT_ISSUER_ID=your-issuer-id

# TestFlight
TESTFLIGHT_GROUPS=internal-testers,beta-testers