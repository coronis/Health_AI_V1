# Non-sensitive client configuration for Android
# Copy this file to .env and fill in the actual values
# NEVER commit the actual .env file to version control

# =============================================================================
# Application Configuration
# =============================================================================

APP_NAME=HealthCoachAI
APPLICATION_ID=com.healthcoachai.app
VERSION_NAME=1.0.0
VERSION_CODE=1

# Environment
ENV=development

# =============================================================================
# API Configuration
# =============================================================================

API_BASE_URL=http://10.0.2.2:8080
API_VERSION=v1
API_TIMEOUT=30000

# WebSocket (if needed)
WS_BASE_URL=ws://10.0.2.2:8080

# =============================================================================
# Feature Flags
# =============================================================================

FEATURE_CHAT_ENABLED=true
FEATURE_PHOTO_LOG_STUB=false
FEATURE_SOCIAL_LOGIN_ENABLED=true
FEATURE_OFFLINE_MODE=true
FEATURE_ANALYTICS_ENABLED=true
FEATURE_DEBUG_MODE=true

# =============================================================================
# Third-party Services (Public Keys Only)
# =============================================================================

# Firebase (public configuration)
FIREBASE_PROJECT_ID=healthcoachai-dev
FIREBASE_API_KEY=your-firebase-api-key
FIREBASE_AUTH_DOMAIN=healthcoachai-dev.firebaseapp.com
FIREBASE_MESSAGING_SENDER_ID=123456789

# Sentry (public DSN)
SENTRY_DSN=https://your-public-sentry-dsn@sentry.io/project-id

# =============================================================================
# Analytics and Monitoring
# =============================================================================

# Analytics
ANALYTICS_ENABLED=true
MIXPANEL_TOKEN=your-mixpanel-token

# Performance Monitoring
PERFORMANCE_MONITORING_ENABLED=true

# =============================================================================
# OAuth Configuration (Client IDs only)
# =============================================================================

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com

# =============================================================================
# Build Configuration
# =============================================================================

# Signing configuration
STORE_FILE=healthcoachai-dev.keystore
STORE_PASSWORD=changeme
KEY_ALIAS=healthcoachai-dev
KEY_PASSWORD=changeme

# Build types
DEBUG_KEYSTORE=debug.keystore
RELEASE_KEYSTORE=release.keystore

# =============================================================================
# Local Development
# =============================================================================

# Debug settings
DEBUG_NETWORK_REQUESTS=true
DEBUG_LOGGING=true
DEBUG_PERFORMANCE=true

# Mock data
USE_MOCK_DATA=false
MOCK_API_DELAY=1000

# =============================================================================
# Google Play Configuration
# =============================================================================

# Play Console
PLAY_CONSOLE_CREDENTIALS=path/to/play-console-credentials.json
TRACK=internal

# App Bundle
BUNDLE_ID=com.healthcoachai.app.dev
BUNDLE_VERSION=1.0.0