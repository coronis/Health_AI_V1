{
  "name": "@healthcoachai/design-tokens",
  "version": "0.1.0",
  "description": "HealthCoachAI Design System Tokens",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build": "pnpm build:tokens && pnpm build:platforms",
    "build:tokens": "node scripts/build-tokens.js",
    "build:platforms": "pnpm build:ios && pnpm build:android && pnpm build:web",
    "build:ios": "node scripts/build-ios.js",
    "build:android": "node scripts/build-android.js", 
    "build:web": "node scripts/build-web.js",
    "dev": "pnpm build --watch",
    "clean": "rimraf dist",
    "validate": "node scripts/validate-tokens.js"
  },
  "devDependencies": {
    "chroma-js": "^2.4.2",
    "fs-extra": "^11.2.0",
    "lodash": "^4.17.21",
    "rimraf": "^5.0.5",
    "@types/chroma-js": "^2.4.4",
    "@types/fs-extra": "^11.0.4",
    "@types/lodash": "^4.14.202"
  },
  "keywords": [
    "design-system",
    "design-tokens",
    "ui",
    "mobile",
    "ios",
    "android"
  ]
}