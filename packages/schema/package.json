{
  "name": "@healthcoachai/schema",
  "version": "0.1.0",
  "description": "Shared schemas - OpenAPI fragments and JSON Schemas",
  "private": true,
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "lint": "eslint src/ --ext .ts,.tsx",
    "lint:fix": "eslint src/ --ext .ts,.tsx --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "validate": "ajv validate -s src/json-schemas/*.json -d test-data/*.json"
  },
  "dependencies": {
    "ajv": "^8.12.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "typescript": "^5.3.0",
    "ajv-cli": "^5.0.0"
  },
  "files": [
    "dist",
    "src"
  ]
}