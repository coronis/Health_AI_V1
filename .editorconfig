# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# TypeScript and JavaScript files
[*.{ts,tsx,js,jsx}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
indent_size = 2

# Python files (for any scripts)
[*.py]
indent_size = 4

# Shell scripts
[*.{sh,bash}]
indent_size = 2

# Make files
[{Makefile,makefile}]
indent_style = tab

# Batch files
[*.{cmd,bat}]
end_of_line = crlf

# SQL files
[*.sql]
indent_size = 2

# XML files
[*.{xml,plist}]
indent_size = 2

# Configuration files
[*.{toml,ini}]
indent_size = 2